<button class="btn btn-md btn-success btn-words">
  <%= link_to "Write a new post!", new_post_path %>
</button>
<div class="spacer"></div>
<% if @posts %>
  <table class="table table-striped table-hover table-condensed table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Date Created</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at.strftime("%A, %B %e, %Y %l:%M %P") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2>No posts yet!</h2>
<% end %>
